		java.setBounds(250,150,150,150);
		physics=new JButton("Physics");
		physics.setForeground(Color.black);
		physics.setBackground(Color.LIGHT_GRAY);
		physics.setFont(new Font("Times New Roman",  Font.ITALIC, 40));
		physics.setBounds(50,325,150,150);
		os=new JButton("OS");
