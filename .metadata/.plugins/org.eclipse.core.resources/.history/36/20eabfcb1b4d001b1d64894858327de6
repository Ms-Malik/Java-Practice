		os.setBackground(Color.LIGHT_GRAY);
		os.setFont(new Font("Times New Roman",  Font.ITALIC, 40));
		os.setBounds(250,325,150,150);
		jf.add(lb);
		jf.add(c);
		jf.add(java);
		jf.add(os);
		jf.add(physics);
		jf.setLayout(null);  
	    jf.setVisible(true); 
	    c.addActionListener(this);
	    java.addActionListener(this);
	    os.addActionListener(this);
	    physics.addActionListener(this);
	}
